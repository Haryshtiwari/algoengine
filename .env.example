# Environment Configuration for AlgoEngine

# =====================================================================
# DATABASE CONFIGURATION
# =====================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=Quants
DB_PASSWORD=Quants@4897
DB_NAME=algo_trading_db

# =====================================================================
# SERVER CONFIGURATION
# =====================================================================
PORT=3000
NODE_ENV=development

# =====================================================================
# WEBHOOK SECURITY
# =====================================================================
# Shared secret for TradingView webhook authentication
WEBHOOK_SECRET=your_webhook_secret_here_change_in_production

# =====================================================================
# BROKER API CREDENTIALS (Examples - per user stored in DB)
# =====================================================================
# These are fallback/test credentials only
# Production: fetch from apikeys table per user

# =====================================================================
# LOGGING
# =====================================================================
LOG_LEVEL=info
LOG_FILE=logs/algoengine.log

# =====================================================================
# SL/TP MONITOR
# =====================================================================
# Polling interval in seconds for SL/TP monitoring
SLTP_MONITOR_INTERVAL=5

# =====================================================================
# EXECUTION SETTINGS
# =====================================================================
# Max concurrent executions per signal
MAX_CONCURRENT_EXECUTIONS=10
